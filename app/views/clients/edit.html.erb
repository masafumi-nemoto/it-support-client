<h1>Edit Client</h1>

<%= form_tag("/clients/" + @client.id.to_s, :method=>:patch) do %>
    <div class="form-group">
        <%= label_tag "form-title", "Title"%>
        <%= text_field :clients, :title, id:"form-title", class:"form-control", value: @client.title  %>
    </div>
    <div class="form-group">
        <%= label_tag "form-body", "Content"%>
        <%= text_field :clients, :body, id:"form-body", class: "form-control", value: @client.body %>
    </div>
    <div class="form-group">
        <%= label_tag "form-category", "Category"%>
        <%= select_tag 'clients[category_id]', options_from_collection_for_select(@categories, :id, :name), id: "form-category", class: "form-control" %>
    </div>
    <%= submit_tag "Update", class:"btn btn-primary"%>
    <% end %>
